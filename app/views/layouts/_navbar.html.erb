<div class="navbar navbar-default">
<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header ">
      <div class="navbar-brand">CoopBlog</div>
      <% if current_page?(root_path) %>
      <% else %>
      <div class="navbar-brand"><%= link_to "Back to all posts", root_path %></div>
      <% end %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <% if current_user.role == "admin" %>
            <li><%= link_to "All Users", users_path %></li>
          <% end %>
          <% if ["writer", "admin"].include? current_user.role %>
            <%= render "layouts/writer_dropdown" %>
          <% end %>
          <% if ["editor", "admin"].include? current_user.role %>
            <%= render "layouts/editor_dropdown" %>
          <% end %>
          <li><%= link_to "Profile", user_path(current_user)%></li>
          <% if current_user.role != "user" %>
            <li><%= link_to 'New Post', new_admin_post_path %></li>
          <% end %>
            <li><%= link_to 'Log Out', destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to 'Login',new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>
