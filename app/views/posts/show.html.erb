<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  <p class="date">
    Submited <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.author %>
    <% if user_signed_in?  %>
      <% if current_user == @post.user %>
        | <%= link_to 'Edit post', edit_post_path(@post) %>
      <% end %>
      <% if current_user == @post.user %>
      | <%= link_to 'Delete', post_path(@post), method: :delete, data: {confirm: 'Are you shure?'} %>
      <% end %>
    <% end %>
  </p>
  <p class="body">
    <%= @post.body %>
  </p>

  <div id="comments">
    <h2><%= pluralize(@post.comments.count, 'Comment')%></h2>
    <%= render @post.comments %>

    <% if user_signed_in? %>
      <h3>Add a comment</h3>
      <%= render 'comments/form' %>
    <% else %>
      <h3>You should sign in to leave a comment</h3>
    <% end %>
  </div>
</div>
