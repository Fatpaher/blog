<div class="comment">
  <p><%= comment.body %></p>
  <small>
    <%= time_ago_in_words(comment.created_at)%> ago by <%= comment.user.email %>
  </small>
  <% if user_signed_in? %>
  <br>
    <% if current_user.role == "admin" || current_user == comment.user %>
      <button type="button" class="btn btn-sm btn-danger del-comment">
        <%= link_to 'Delete', [comment.post, comment],
          method: :delete,
          class:'button',
          data: { confirm:'Are you shure?' } %>
      </button>
    <% end %>
  <% end %>
</div>
