<div class="comment">
  <p><%= comment.body %></p>
  <small>
    <%= time_ago_in_words(comment.created_at)%> ago by <%= comment.name %>
  </small>
  <% if user_signed_in? %>
  <br>
    <button type="button" class="btn btn-sm btn-danger">
      <%= link_to 'Delete comment', [comment.post, comment],
        method: :delete,
        class:'button',
        data: { confirm:'Are you shure?' } %>
    </button>
  <% end %>
</div>
