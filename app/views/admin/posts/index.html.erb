<h1><%= @header %></h1>
<% if @posts.length > 0 %>
  <table class="posts table table-bordered">
    <tr class="info">
      <th>Id</th>
      <th>Title</th>
      <th>Created</th>
      <th>Updated</th>
      <th>Actions</th>
    </tr>
    <% @posts.each do |post| %>
    <tr class="post">
      <td><%= post.id %></td>
      <td><%= link_to post.title, edit_admin_post_path(post) %></td>
      <td><%= post.created_at %></td>
      <td><%= post.updated_at %></td>
      <td>
        <%= link_to "Edit", edit_admin_post_path(post) %>
        <%= link_to "Delte", admin_post_path(post), method: :delete, confirm: "Are you sure?" %>
      </td>

    </tr>
    <% end %>
  </table>
<% else %>
  <p>No posts found</p>
<% end %>
